local ReplicatedStorage = game:GetService("ReplicatedStorage")
local Players = game:GetService("Players")
local player = Players.LocalPlayer

local AcceptPetGift = ReplicatedStorage:WaitForChild("GameEvents"):WaitForChild("AcceptPetGift")
local giftUI = player:WaitForChild("PlayerGui"):WaitForChild("GiftScreen"):WaitForChild("GiftList")

-- Loop semua gift dan terima
for _, gift in ipairs(giftUI:GetChildren()) do
    if gift:IsA("Frame") and gift:FindFirstChild("PetName") and gift:FindFirstChild("Sender") then
        local petName = gift.PetName.Text
        local fromPlayer = gift.Sender.Text
        print("ðŸ“¥ Menerima gift dari", fromPlayer, ":", petName)
        AcceptPetGift:FireServer(petName, fromPlayer)
        task.wait(0.5) -- beri delay agar tidak spam
    end
end
