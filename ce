local Players = game:GetService("Players")
local UserInputService = game:GetService("UserInputService")

local localPlayer = Players.LocalPlayer
local GUI_CHECK_INTERVAL = 2 -- Cek setiap 2 detik

-- Fungsi untuk mencari tombol Accept di PlayerGui
local function findAcceptButton()
    local gui = localPlayer:WaitForChild("PlayerGui")
    
    -- Cari Frame/TextButton yang mengandung teks "Accept"
    for _, element in ipairs(gui:GetDescendants()) do
        if element:IsA("TextButton") and string.find(element.Text:lower(), "accept") then
            return element
        elseif element:IsA("Frame") then
            -- Cek jika Frame mengandung tombol Accept
            local acceptBtn = element:FindFirstChildOfClass("TextButton")
            if acceptBtn and string.find(acceptBtn.Text:lower(), "accept") then
                return acceptBtn
            end
        end
    end
    return nil
end

-- Fungsi untuk mengklik tombol Accept
local function clickAcceptButton(button)
    pcall(function()
        -- Simulasikan klik mouse
        button:FireEvent("MouseButton1Click")
        
        -- Alternatif jika FireEvent tidak bekerja
        if button:IsA("TextButton") then
            button.Activated:Fire()
        end
        
        print("[SUCCESS] Berhasil mengklik tombol Accept!")
    end)
end

-- Main loop
while task.wait(GUI_CHECK_INTERVAL) do
    local acceptButton = findAcceptButton()
    
    if acceptButton then
        print("[FOUND] Tombol Accept ditemukan:", acceptButton:GetFullName())
        clickAcceptButton(acceptButton)
    else
        print("[INFO] Menunggu gift muncul...")
    end
end
