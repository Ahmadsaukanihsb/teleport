local ReplicatedStorage = game:GetService("ReplicatedStorage")
local remote = ReplicatedStorage:FindFirstChild("AcceptPetGift")

if remote then
    remote.OnClientEvent:Connect(function(...)
        print("🎁 AcceptPetGift menerima event dari server:")
        print(...)
    end)
else
    warn("❌ Event AcceptPetGift tidak ditemukan.")
end
